{
  "schemaVersion": 1,
  "id": "valocraft",
  "version": "${version}",

  "name": "ValoCraft",
  "description": "Minecraft modded recreation of a certain popular game",
  "authors": [
    "Trullycool"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.trullycool.valocraft.ValoCraft"
    ],
    "client": [
      "net.trullycool.valocraft.ValoCraftClient"
    ]
  },
  "mixins": [
    "valocraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
